global-reset()

body
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
	background: #eaeaea
	margin: 0
	padding: 0
a
	color: #00B7FF
	
p
	margin: 0


#header
	background: #eae
	margin: 0
	height: 68px
	width: 100%
#header>div
	height: 68px
#content
	background: #eea
	margin: 0
	padding: 8px
#footer
	background: #aee
	text-align: center
	padding: 4px 0

#container
	margin: 0 auto
	background: #fff

#title-container
	background: #aee
	height: 68px
	width: 280px
	float: left
#title a
	font-size: 48px
	color: black
	text-decoration: none
#title a:hover
	text-decoration: underline
#tagline
	font-size: 12px
	margin-top: -7px
	color: #aaa
	margin-left: 4px
	float: left;
#logo
	height: 64px
	width: 64px
	background: url('/images/dotabutt_64.png') white
	border: 2px solid black
	float: left

#nav-container
	float: left
ul#nav
	margin: 0
	padding: 0
ul#nav li
	display: inline
ul#nav li a
	text-decoration: none
	color: black
	font-size: 20px
	list-style: none outside none
	height: 68px
	line-height: 68px
	background: #aea
	display: block
	float: left
	width: 90px
	text-align: center
ul#nav li a:hover
	background: #eaa

#user-container
	float: right
img#avatar
	border: 2px solid red
	float: left
#user-info
	width: 180px
	background: #aae
	height: 100%
	float: left
	text-align: center
#user-name
	font-size: 18px
	height: 50%
	position: relative
#user-name a
	position: absolute
	width: 100%
	bottom: 0
	text-align: center
	color: black
	text-decoration: none
	display: block
#user-controls
	font-size: 12px
#user-controls a
	color: black
	text-decoration: none
#user-controls a:hover
	text-decoration: underline