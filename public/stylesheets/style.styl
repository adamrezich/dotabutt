global-reset()

*
	cursor: default
body
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
	background: #eaeaea
	margin: 0
	padding: 0
a
	color: #00B7FF
	cursor: pointer
p
	margin: 0
	cursor: text
	margin-bottom: 8px
p:last-child
	margin-bottom: 0
h1
	margin: 0


#header-container
	width: 100%
	margin: 0
	padding: 0
	box-sizing: border-box
#header
	height: 68px
	max-width: 1024px
	margin: 0 auto
	padding: 0
	box-sizing: border-box
#header>div
	height: 68px
#content
	margin: 0 auto
	padding: 10px
	max-width: 960px
	background: white
#footer
	text-align: center
	padding: 8px 0
	box-sizing: border-box
	max-width: 960px
	margin: 0 auto
	color: #999

#container
	margin: 0 auto

#title-container
	height: 68px
	width: 68px
	float: left
#title
	display: none
#title a
	font-size: 48px
	color: #333
	text-decoration: none
#title a:hover
	text-decoration: underline
#tagline
	font-size: 12px
	margin-top: -7px
	color: #aaa
	margin-left: 4px
	float: left;
	display: none
#logo
	height: 64px
	width: 64px
	background: url('/images/dotabutt_64.png') white
	border: 2px solid black
	float: left

#nav-container-large
	text-align: center
	width: 100%
	display: none
ul#nav-large
	margin: 0 auto
	padding: 0
	width: 450px
ul#nav-large li
	display: inline
	list-style: none outside none
ul#nav-large li a
	text-decoration: none
	color: #666
	font-size: 20px
	height: 68px
	line-height: 68px
	display: block
	float: left
	width: 90px
	text-align: center
ul#nav-large li a:hover
	background: #ccc

#nav-container-med
	display: block
	height: 36px
	margin: 0
	padding: 0
ul#nav-med
	margin: 0
	padding: 0
	text-align: center
	height: 36px
	position: absolute
	width: 100%
ul#nav-med li
	list-style: none outside none
	display: block
	float: left
	height: 100%
	width: 20%
	position: relative
ul#nav-med li a
	text-decoration: none
	font-size: 24px
	height: 36px
	color: #666
	display: block
	padding: 4px 0
	box-sizing: border-box
ul#nav-med li a:hover
	background: #ccc

#user-container
	float: right
	width: 68px
img#avatar
	border: 2px solid #999
	float: left
#user-info
	width: 212px
	height: 100%
	float: left
	text-align: right
	box-sizing: border-box
	padding-right: 8px
	display: none
#user-name
	font-size: 18px
	height: 50%
	position: relative
#user-name a
	position: absolute
	width: 100%
	bottom: 0
	text-align: right
	color: black
	text-decoration: none
	display: block
#user-controls
	font-size: 12px
#user-controls a
	color: black
	text-decoration: none
#user-controls a:hover
	text-decoration: underline

@media (min-width: 1010px)
	#nav-container-large
		display: block
	#nav-container-med
		display: none
	#content-container
		margin-top: 16px
@media (min-width: 560px)
	#user-container
		width: 280px
	#user-info
		display: block
@media (max-width: 560px)
	#nav-container-med
		height: 32px
	ul#nav-med
		height: 32px
	ul#nav-med li a
		font-size: 20px
@media (max-width: 400px)
	#nav-container-med
		height: 28px
	ul#nav-med
		height: 28px
	ul#nav-med li a
		font-size: 16px
@media (max-width: 360px)
	#nav-container-med
		height: 26px
	ul#nav-med
		height: 26px
	ul#nav-med li a
		font-size: 14px
@media (max-width: 290px)
	#nav-container-med
		height: 24px
	ul#nav-med
		height: 24px
	ul#nav-med li a
		font-size: 12px
@media (min-width: 348px)
	#title-container
		width: 280px
	#title
		display: block
	#tagline
		display: block