doctype 5
html
	head
		title Dotabutt - #{title}
		link(rel='stylesheet', href='/stylesheets/style.css')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
	body
		#container
			#header-container
				#header
					#logo-container
						a#logo(href='/')
					#user-container
						img#avatar(src='http://media.steampowered.com/steamcommunity/public/images/avatars/fc/fc9f0ca1085c3d92214960f09b364608a537d33d_medium.jpg')
						#user-info
							#user-name: a(href='/') [OB] takua108
							#user-controls
								a(href='/') Settings
								|  | 
								a(href='/') Sign Out
					#title-container
						#title
							a(href='/') Dotabutt
						#tagline classy Dota 2 statistics
					#nav-container-large
						ul#nav-large
							li: a(href='/heroes/') Heroes
							li: a(href='/items/') Items
							li: a(href='/matches/') Matches
							li: a(href='/players/') Players
							li: a(href='/teams/') Teams
			#nav-container-med
				ul#nav-med
					li: a(href='/heroes/') Heroes
					li: a(href='/items/') Items
					li: a(href='/matches/') Matches
					li: a(href='/players/') Players
					li: a(href='/teams/') Teams
			#content-container
				#content
					block content
			#footer-container
				#footer Copyright 2012 Adam Rezich. Dota 2 is a registered trademark of Valve Corporation.